<Window x:Class="JL_RegistroCompleto.UI.Registro.rPersonas"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JL_RegistroCompleto.UI.Registro"
        mc:Ignorable="d"
        Title="REGISTRO PERSONA" Height="470" Width="470" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal" Height="30" Margin="10,5,10,0">
                <Label Content="Id Persona" FontWeight="Bold" Height="35" FontSize="18" />
            </StackPanel>

            <StackPanel Orientation="Horizontal" Height="35" Margin="10,0,10,0">
                <TextBox x:Name="IdPersonaTextbox" Text="{Binding IdPersona}" Width="260" FontSize="18" VerticalContentAlignment="Center" FontWeight="Bold" Background="#19000000" Foreground="#B2000000" />
                <Button Margin="50,0,0,0" Width="120" Click="Button_Click_Buscar">
                    <StackPanel Orientation="Horizontal">
                        <Image Height="30" Source="/Resources/Buscar.png" />
                        <Label Content="Buscar" FontSize="17" FontWeight="Bold"/>
                    </StackPanel>
                </Button>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Height="30" Margin="10,5,10,0">
                <Label Content="Nombre Completo" FontWeight="Bold" Height="30" FontSize="18" />
            </StackPanel>

            <StackPanel Orientation="Horizontal" Height="35" Margin="10,0,10,0">
                <TextBox x:Name="NombreCompletoTextbox" Text="{Binding NombreCompleto}" Width="430" FontSize="18" VerticalContentAlignment="Center" />
                <!--, Mode=TwoWay, ValidatesOnExceptions=True-->
            </StackPanel>

            <StackPanel Orientation="Horizontal" Height="30" Margin="10,5,10,0" HorizontalAlignment="Center">
                <Label Content="Telefono" FontWeight="Bold" Height="30" FontSize="18" />
                <Label Content="Cedula" FontWeight="Bold" Height="30" FontSize="18" Margin="150,0,0,0" />
            </StackPanel>

            <StackPanel Orientation="Horizontal" Height="35" Margin="10,0,10,0">
                <TextBox x:Name="TelefonoTextbox" Text="{Binding Telefono}" Width="200" FontSize="18" VerticalContentAlignment="Center" />
                <TextBox x:Name="CedulaTextbox" Text="{Binding Cedula}" Width="200" Margin="30,0,0,0" FontSize="18" VerticalContentAlignment="Center" />
            </StackPanel>

            <StackPanel Orientation="Horizontal" Height="30" Margin="10,5,10,0">
                <Label Content="Direccion" FontWeight="Bold" Height="30" FontSize="18"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Height="35" Margin="10,0,10,0">
                <TextBox x:Name="DireccionTextbox" Text="{Binding Direccion}" Width="430" FontSize="18" VerticalContentAlignment="Center"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Height="30" Margin="10,5,10,0">
                <Label Content="Fecha nacimiento" FontWeight="Bold" Height="35" FontSize="18" />
            </StackPanel>

            <StackPanel Orientation="Horizontal" Height="35" Margin="10,0,10,0">
                <DatePicker x:Name="FechaNacimientoDataPicker" SelectedDate="{Binding FechaNacimiento}" Height="35" Width="430" FontSize="16" IsTodayHighlighted="False" VerticalContentAlignment="Center" Foreground="#B2000000" SelectedDateFormat="Short"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Height="35" Margin="10,15,10,0">
                <Button Width="130" Click="Button_Click_Nuevo">
                    <StackPanel Orientation="Horizontal">
                        <Image Height="25" Source="/Resources/Crear.png"/>
                        <Label Content="Nuevo" FontSize="17" FontWeight="Bold"/>
                    </StackPanel>
                </Button>

                <Button Margin="20,0,0,0" Width="130" Click="Button_Click_Guardar">
                    <StackPanel Orientation="Horizontal">
                        <Image Height="30" Source="/Resources/Guardar.png"/>
                        <Label Content="Guardar" FontSize="17" FontWeight="Bold"/>
                    </StackPanel>
                </Button>

                <Button Margin="20,0,0,0" Width="130" Click="Button_Click_Eliminar">
                    <StackPanel Orientation="Horizontal">
                        <Image Height="30" Source="/Resources/Eliminar.png"/>
                        <Label Content="Eliminar" FontSize="17" FontWeight="Bold"/>
                    </StackPanel>
                </Button>

            </StackPanel>

            <StackPanel Orientation="Horizontal" Height="25" Margin="10,5,10,0">
                <Label Content="Creacion: 22/05/2020" FontWeight="Bold" Height="25" FontSize="11" FontStyle="Italic" Foreground="#99000000" Padding="5,5,5,5" Width="143"/>
                <Label Content="©2020 José Luis Hernández" FontWeight="Bold" Height="25" FontSize="11" FontStyle="Italic" Foreground="#99000000" Width="153" HorizontalContentAlignment="Center"  />
                <Label Content="Version: Beta 1.0" FontWeight="Bold" Height="25" FontSize="11" FontStyle="Italic" Foreground="#99000000" Width="133" HorizontalContentAlignment="Right"/>
            </StackPanel>

        </StackPanel>
    </Grid>
</Window>
